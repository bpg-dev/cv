{
	admin localhost:2019
}

:8080 {
	root * /usr/share/caddy
	file_server
	encode gzip zstd

	# Cache static assets aggressively (1 year, immutable for fingerprinted files)
	@static path *.css *.js *.woff2 *.woff *.ttf *.webp *.png *.jpg *.jpeg *.gif *.svg *.ico
	header @static Cache-Control "public, max-age=31536000, immutable"

	# Cache HTML/PDF with revalidation
	@documents path *.html *.pdf /
	header @documents Cache-Control "public, max-age=3600, must-revalidate"

	header {
		Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
		X-Frame-Options "SAMEORIGIN"
		X-Content-Type-Options "nosniff"
		X-XSS-Protection "1; mode=block"
		Referrer-Policy "strict-origin-when-cross-origin"
		Permissions-Policy "geolocation=(), microphone=(), camera=()"
		Content-Security-Policy "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self'; frame-ancestors 'self'; base-uri 'self'; form-action 'self'; object-src 'none'"
	}

	try_files {path} /index.html

	log {
		output stdout
		format console
	}
}

:2019 {
	metrics /metrics
}

